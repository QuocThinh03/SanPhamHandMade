@page
@model QuocThinh.Pages.QLSanPham.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_LayoutAdmin.cshtml";
}

<h1>Create</h1>

<h4>SanPham</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SanPham.Ten" class="control-label"></label>
                <input asp-for="SanPham.Ten" class="form-control" />
                <span asp-validation-for="SanPham.Ten" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SanPham.Anh" class="control-label"></label>
                <input type="file" asp-for="Anh" class="form-control" />
                <span asp-validation-for="SanPham.Anh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SanPham.Gia" class="control-label"></label>
                <input asp-for="SanPham.Gia" class="form-control" />
                <span asp-validation-for="SanPham.Gia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SanPham.SoLuong" class="control-label"></label>
                <input asp-for="SanPham.SoLuong" class="form-control" />
                <span asp-validation-for="SanPham.SoLuong" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SanPham.MoTa" class="control-label"></label>
                <input asp-for="SanPham.MoTa" class="form-control" />
                <span asp-validation-for="SanPham.MoTa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SanPham.MauSac" class="control-label"></label>
                <input asp-for="SanPham.MauSac" class="form-control" />
                <span asp-validation-for="SanPham.MauSac" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SanPham.ThongSo" class="control-label"></label>
                <input asp-for="SanPham.ThongSo" class="form-control" />
                <span asp-validation-for="SanPham.ThongSo" class="text-danger"></span>
            </div>
            <select asp-for="SanPham.IDLoai" class="form-control">
                <option value="">-- Chọn loại --</option>
                @if (Model.ListLoai != null)
                {
                    foreach (var loai in Model.ListLoai)
                    {
                        <option value="@loai.ID">@loai.Ten</option>
                    }
                }
            </select>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary mt-3" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index" class="btn btn-secondary">Back to List</a>
</div>

