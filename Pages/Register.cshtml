@page
@model QuocThinh.Pages.RegisterModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng ký</title>
    <link href="~/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="row justify-content-center mt-5">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h3 class="text-center">Đăng ký</h3>
                    </div>
                    <div class="card-body">
                        <form method="post" asp-page-handler="OnPostAsync">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="form-group">
                                <label for="username">Tài khoản</label>
                                <input type="text" id="usernameInput" class="form-control" asp-for="NguoiDung.TaiKhoan" required>
                                <span asp-validation-for="NguoiDung.TaiKhoan" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="username">Tên</label>
                                <input type="text" id="usernameInput" class="form-control" asp-for="NguoiDung.Ten" required>
                                <span asp-validation-for="NguoiDung.Ten" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="username">Địa chỉ</label>
                                <input type="text" id="usernameInput" class="form-control" asp-for="NguoiDung.DiaChi" required>
                                <span asp-validation-for="NguoiDung.DiaChi" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="password">Mật khẩu</label>
                                <input type="password" id="passwordInput" class="form-control" asp-for="NguoiDung.MatKhau" required>
                                <span asp-validation-for="NguoiDung.MatKhau" class="text-danger"></span>
                            </div>
                            <input type="text" hidden asp-for="NguoiDung.Quyen" required value="2">
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary btn-block">Đăng ký</button>
                            </div>
                        </form>
                        <div class="text-center mb-3">
                            <a asp-area="" asp-page="/Login" class="btn btn-secondary">Đăng nhập nếu đã có tài khoản</a>
                            <a asp-area="" asp-page="/Index" class="btn btn-secondary">Quay lại trang chủ</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
